<Window x:Class="MinesweeperWeeklyAssignment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Minesweeper" Height="600" Width="820">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="{Binding MinesRemaining, StringFormat=D3}" FontSize="20" FontWeight="Bold" Foreground="GhostWhite" Background="Black" Padding="5" Margin="5" />
            <TextBlock Text="{Binding TimeElapsed, StringFormat=D3}" FontSize="20" FontWeight="Bold" Foreground="GhostWhite" Background="Black" Padding="5" Margin="5" />
        </StackPanel>

        <UniformGrid Grid.Row="1" Name="GameBoard" Margin="0" />

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Name="ResetButton" Content="Reset" Width="80" Margin="5" Click="ResetButton_Click" />
            <TextBlock Name="StatusLabel" VerticalAlignment="Center" FontSize="16" />
        </StackPanel>
    </Grid>
</Window>